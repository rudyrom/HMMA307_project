   \newpage
   \setcounter{page}{1}
   \noindent
   \begin{center}
   \framebox{
      \vbox{\vspace{2mm}
    \hbox to 6.28in { {\bf #1\hfill} }
       \vspace{6mm}
       \hbox to 6.28in { {\Large \hfill #2  \hfill} }
       \vspace{6mm}
       \hbox to 6.28in { {\it Cours: #3 \hfill Scribes: #4} }
      \vspace{2mm}}
   }
   \end{center}
   \markboth{#1}{#1}
   \vspace*{4mm}
}

