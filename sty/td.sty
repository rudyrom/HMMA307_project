% Exercice:
\newcommand{\exercice}[1][]{%
  \ifthenelse{\isempty{#1}}%
    {\vspace{0.3cm}
      \par\noindent\stepcounter{numeroexo}
      \hspace{-.25cm}\textsc{\textbf{Exercice \arabic{numeroexo}.}}\quad}% if #1 is empty
    {\vspace{0.3cm}
    \par\noindent\stepcounter{numeroexo}
    \hspace{-.25cm}\textsc{\textbf{Exercice \arabic{numeroexo}.}}\quad
    \textbf{(#1)}}% if #1 is not empty
}


